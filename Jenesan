<script>
// Typing effect
const text = "You are my favorite person in the entire universe ðŸ’•";
let i = 0;
function typeWriter() {
    if (i < text.length) {
        document.getElementById("typing").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 50);
    }
}
typeWriter();

// Countdown
function updateCountdown() {
    const now = new Date();
    const year = now.getFullYear();
    const valentine = new Date(year, 1, 14);
    if (now > valentine) valentine.setFullYear(year + 1);
    const diff = valentine - now;
    const d = Math.floor(diff / (1000*60*60*24));
    const h = Math.floor((diff/(1000*60*60))%24);
    document.getElementById("countdown").innerHTML =
        "Countdown to Valentine's Day: " + d + " days " + h + " hours ðŸ’˜";
}
setInterval(updateCountdown, 1000);

// Moving NO + Growing YES
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
let size = 1;

noBtn.addEventListener("mouseover", () => {
    noBtn.style.top = Math.random()*window.innerHeight + "px";
    noBtn.style.left = Math.random()*window.innerWidth + "px";
    size += 0.2;
    yesBtn.style.transform = "scale(" + size + ")";
});

// Floating hearts
setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "â¤ï¸";
    heart.style.left = Math.random()*100 + "vw";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),5000);
}, 300);

// Fireworks
function fireworks() {
    for (let i = 0; i < 50; i++) {
        const fw = document.createElement("div");
        fw.className = "firework";
        fw.style.background = "hsl(" + Math.random()*360 + ",100%,50%)";
        fw.style.left = "50%";
        fw.style.top = "50%";
        fw.style.setProperty('--x', (Math.random()*400-200)+"px");
        fw.style.setProperty('--y', (Math.random()*400-200)+"px");
        document.body.appendChild(fw);
        setTimeout(()=>fw.remove(),1000);
    }
}

// YES button
function sayYes() {
    fireworks();
    setTimeout(() => {
        const password = prompt("Enter our special password ðŸ’•");
        if (password === "JREE1522") {
            document.body.innerHTML = document.getElementById("secret").outerHTML;
            document.getElementById("secret").style.display = "block";
        } else {
            alert("Wrong password ðŸ™ˆ Try again!");
        }
    }, 1000);
}
</script>

