<script>
// Typing effect
const message = "You are my favorite person in the whole universe ðŸ’•";
let idx=0;
function typeWriter(){
  if(idx<message.length){
    document.getElementById("typing").innerHTML+=message.charAt(idx);
    idx++; setTimeout(typeWriter,50);
  }
}
typeWriter();

// Moving NO
const noBtn=document.getElementById("noBtn");
const noMsg=document.getElementById("noMsg");

function moveNo(){
    const x=Math.random()*(window.innerWidth-80);
    const y=Math.random()*(window.innerHeight-80);
    noBtn.style.left=x+"px";
    noBtn.style.top=y+"px";
    noMsg.style.left=x+"px";
    noMsg.style.top=(y+35)+"px";
}

noBtn.addEventListener("mouseover", moveNo);
noBtn.addEventListener("touchstart", moveNo);

// Floating hearts
setInterval(()=>{
  const heart=document.createElement("div");
  heart.className="heart";
  heart.innerHTML="â¤ï¸";
  heart.style.left=Math.random()*100+"vw";
  document.body.appendChild(heart);
  setTimeout(()=>heart.remove(),5000);
},300);

// Fireworks
function fireworks(){
  for(let i=0;i<50;i++){
    const fw=document.createElement("div");
    fw.className="firework";
    fw.style.background="hsl("+Math.random()*360+",100%,50%)";
    fw.style.left="50%"; fw.style.top="50%";
    fw.style.setProperty('--x',(Math.random()*400-200)+"px");
    fw.style.setProperty('--y',(Math.random()*400-200)+"px");
    document.body.appendChild(fw);
    setTimeout(()=>fw.remove(),1000);
  }
}

// YES click
const yesBtn=document.getElementById("yesBtn");
yesBtn.addEventListener("click",()=>{
  fireworks();
  document.getElementById("secret").style.display="block";
});
</script>

